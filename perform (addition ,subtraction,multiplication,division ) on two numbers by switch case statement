#include<stdio.h>
int main()
{
    int a,b,n;
    printf("enter  the values of a and b: ");
    scanf("%d%d",&a,&b);
    printf("enter the value of n: ");
    scanf("%d",&n);
    switch(n)
    {
        case 1:
        printf("%d",a+b);
        break;
         case 2:
        printf("%d",a-b);
        break;
         case 3:
        printf("%d",a*b);
        break;
         case 4:
        printf("%d",a/b);
        break;
        default:
        printf("thank u");
    }
    return 0;
}
