//find out the max_of_four by using function
#include<stdio.h>
int max_of_four(int a,int b,int c,int d);//function prototyping
int main()
{
    int a=3,b=16,c=8,d=9;
    int n=max_of_four(a,b,c,d);//function calling
    printf("%d",n);
    return 0;
}
//call by value
int max_of_four(int a,int b,int c,int d)//function defination
{
   if(a>b && a>c && a>d)
   { return a;
   }
   else if(b>a && b>c && b>d)
   {
       return b;
   }
   else if(c>a && c>b && c>d)
   {
       return c;
   }
   else
   {
       return d;
   }
}
