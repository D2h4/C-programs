//nested if-else..........
#include<stdio.h>
int main()
{  char gender;
   int age;
   printf("enter the age: ");
   scanf("%d",&age);
   if(age>18)
   {
     printf("enter the gender: ");
     scanf("%s", &gender);
     if(gender=='m' || gender=='M')
     {
        printf("applied for driving license");
     }
     else if(gender=='f' || gender=='F')
     {
        printf("applied for cooking");
     }
     else{
        printf("enter correct gender: ");
     }
   }
   else{
      printf("enter the gender\n");
      scanf("%s", &gender);
      if(gender=='m' || gender=='M' || gender=='f' || gender=='F')
      {
        printf("adults");
      }
      else{
        printf("thank u");
      }
   }
    return 0;
}
