//nested if-else..........
#include<stdio.h>
int main()
{
    int age,per;
    char gen;
    printf("enter the age: ");
    scanf("%d",&age);
    if(age>18)
    {
        printf("enter the per: ");
        scanf("%d",&per);
        if(per>=60)
        {
            printf("enter the gender: ");
            scanf("%s",&gen);
            if(gen=='m'|| gen=='M')
            {
                printf("applied for NCC C-certificate");
            }
            else if(gen=='f'|| gen=='F') 
            {
                printf("applied for scoutt certificate");
            }
            else
            { printf("enter the correct gender: "); }
        }
        else
        {
             printf("enter the gender: ");
            scanf("%s",&gen);
            if(gen=='m'|| gen=='M')
            {
                printf("applied for NCC B-certificate");
            }
            else if(gen=='f'|| gen=='F') 
            {
                printf("applied for NSS");
            }
            else
            { printf("enter the correct gender: "); }
        }
    }
    else
    {
        printf("enter the per: ");
        scanf("%d",&per);
        if(per>=60)
        {
             printf("enter the gender: ");
            scanf("%s",&gen);
            if(gen=='m'|| gen=='M')
            {
                printf("applied for NCC B-certificate");
            }
            else if(gen=='f'|| gen=='F') 
            {
                printf("applied for NCC A-certificate");
            }
            else
            { printf("enter the correct gender: "); }
        }
        else{
            printf("sorry");
        }
    }
    return 0;
}
